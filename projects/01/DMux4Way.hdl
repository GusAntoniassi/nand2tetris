/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    /*
        1ยบ DMux: vai gerar out1 e out2 com base no primeiro bit
        2ยบ DMux: vai alternar entre A e C, os dois que tem o primeiro bit igual e o segundo bit diferente
        3ยบ DMux: vai alternar entre B e D, os dois que tem o primeiro bit igual e o segundo bit diferente
    */
    DMux(in=in, sel=sel[0], a=out1, b=out2);

    DMux(in=out1, sel=sel[1], a=a, b=c);
    DMux(in=out2, sel=sel[1], a=b, b=d);
}